@{
    ViewData["Title"] = "Doctor Dashboard | Healthcare Management System";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --doctor-primary: #388e3c;
        --doctor-secondary: #4caf50;
        --doctor-light: #e8f5e8;
        --doctor-dark: #2e7d32;
        --success-color: #388e3c;
        --warning-color: #f57c00;
        --info-color: #2196f3;
        --danger-color: #d32f2f;
    }

    * {
        font-family: 'Poppins', sans-serif;
    }

    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }

    .doctor-dashboard {
        padding: 30px 0;
    }

    .doctor-header {
        background: linear-gradient(135deg, var(--doctor-primary), var(--doctor-secondary));
        color: white;
        padding: 40px 0;
        margin-bottom: 40px;
        border-radius: 0 0 30px 30px;
        box-shadow: 0 10px 30px rgba(56, 142, 60, 0.3);
    }

    .doctor-welcome {
        text-align: center;
    }

    .doctor-welcome h1 {
        font-size: 2.5rem;
        font-weight: 600;
        margin-bottom: 15px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .doctor-welcome p {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 0;
    }

    .doctor-stats {
        margin-bottom: 40px;
    }

    .stat-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        border: 1px solid rgba(56, 142, 60, 0.1);
        height: 100%;
    }

    .stat-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    }

    .stat-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 2rem;
        color: white;
    }

    .stat-icon.appointments {
        background: linear-gradient(135deg, var(--info-color), #42a5f5);
    }

    .stat-icon.patients {
        background: linear-gradient(135deg, var(--success-color), #66bb6a);
    }

    .stat-icon.consultations {
        background: linear-gradient(135deg, var(--warning-color), #ffb74d);
    }

    .stat-icon.prescriptions {
        background: linear-gradient(135deg, var(--danger-color), #ef5350);
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--doctor-primary);
        margin-bottom: 10px;
    }

    .stat-label {
        font-size: 1.1rem;
        color: #666;
        font-weight: 500;
    }

    .doctor-actions {
        margin-bottom: 40px;
    }

    .action-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        border: 1px solid rgba(56, 142, 60, 0.1);
        height: 100%;
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        text-decoration: none;
        color: inherit;
    }

    .action-icon {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        font-size: 1.5rem;
        color: white;
    }

    .action-icon.schedule {
        background: linear-gradient(135deg, var(--info-color), #42a5f5);
    }

    .action-icon.patients {
        background: linear-gradient(135deg, var(--success-color), #66bb6a);
    }

    .action-icon.appointments {
        background: linear-gradient(135deg, var(--warning-color), #ffb74d);
    }

    .action-icon.records {
        background: linear-gradient(135deg, var(--danger-color), #ef5350);
    }

    .action-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--doctor-primary);
        margin-bottom: 10px;
    }

    .action-description {
        color: #666;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .recent-activity {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(56, 142, 60, 0.1);
    }

    .activity-header {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid rgba(56, 142, 60, 0.1);
    }

    .activity-header h3 {
        margin: 0;
        color: var(--doctor-primary);
        font-weight: 600;
        font-size: 1.4rem;
    }

    .activity-header i {
        margin-right: 15px;
        font-size: 1.5rem;
        color: var(--doctor-secondary);
    }

    .activity-item {
        display: flex;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .activity-item:last-child {
        border-bottom: none;
    }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1rem;
        color: white;
    }

    .activity-content {
        flex: 1;
    }

    .activity-title {
        font-weight: 500;
        color: var(--doctor-primary);
        margin-bottom: 5px;
    }

    .activity-time {
        font-size: 0.85rem;
        color: #999;
    }

    .logout-btn {
        position: fixed;
        top: 20px;
        right: 20px;
        background: linear-gradient(135deg, var(--doctor-primary), var(--doctor-secondary));
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(56, 142, 60, 0.3);
        display: flex;
        align-items: center;
        gap: 8px;
        z-index: 1000;
    }

    .logout-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(56, 142, 60, 0.4);
    }

    @@media (max-width: 768px) {
        .doctor-header {
            padding: 30px 0;
            margin-bottom: 30px;
        }

        .doctor-welcome h1 {
            font-size: 2rem;
        }

        .stat-card, .action-card, .recent-activity {
            margin-bottom: 20px;
        }

        .logout-btn {
            position: relative;
            top: auto;
            right: auto;
            margin: 20px auto;
            display: flex;
            width: fit-content;
        }
    }
</style>

<div class="doctor-dashboard">
    <!-- Header -->
    <div class="doctor-header">
        <div class="container">
            <div class="doctor-welcome">
                <div style="margin-bottom: 20px;">
                    <i class="bi bi-heart-pulse-fill" style="font-size: 2rem; color: white; margin-right: 15px;"></i>
                    <span style="font-size: 1.5rem; font-weight: 600;">HealthCarePro</span>
                </div>
                <h1><i class="bi bi-heart-pulse"></i> Doctor Dashboard</h1>
                <p>Manage your patients, appointments, and provide quality healthcare</p>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Stats Section -->
        <div class="doctor-stats">
            <div class="row">
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="stat-card">
                        <div class="stat-icon appointments">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <div class="stat-number">12</div>
                        <div class="stat-label">Today's Appointments</div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="stat-card">
                        <div class="stat-icon patients">
                            <i class="bi bi-people"></i>
                        </div>
                        <div class="stat-number">89</div>
                        <div class="stat-label">Active Patients</div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="stat-card">
                        <div class="stat-icon consultations">
                            <i class="bi bi-chat-dots"></i>
                        </div>
                        <div class="stat-number">156</div>
                        <div class="stat-label">Consultations This Month</div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="stat-card">
                        <div class="stat-icon prescriptions">
                            <i class="bi bi-capsule"></i>
                        </div>
                        <div class="stat-number">34</div>
                        <div class="stat-label">Prescriptions Written</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="doctor-actions">
            <div class="row">
                <div class="col-md-3 col-sm-6 mb-4">
                    <a href="@Url.Action("MonthlyView", "Doctor")" class="action-card">
                        <div class="action-icon schedule">
                            <i class="bi bi-calendar-month"></i>
                        </div>
                        <div class="action-title">Monthly Schedule</div>
                        <div class="action-description">View and manage your monthly calendar with advanced scheduling</div>
                    </a>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <a href="@Url.Action("Patients", "Doctor")" class="action-card">
                        <div class="action-icon patients">
                            <i class="bi bi-people"></i>
                        </div>
                        <div class="action-title">My Patients</div>
                        <div class="action-description">View and manage your patient list and medical histories</div>
                    </a>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <a href="@Url.Action("Appointments", "Doctor")" class="action-card">
                        <div class="action-icon appointments">
                            <i class="bi bi-calendar-plus"></i>
                        </div>
                        <div class="action-title">Appointments</div>
                        <div class="action-description">Manage appointments and consultation schedules</div>
                    </a>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <a href="#" class="action-card">
                        <div class="action-icon records">
                            <i class="bi bi-file-medical"></i>
                        </div>
                        <div class="action-title">Medical Records</div>
                        <div class="action-description">Access and update patient medical records</div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="recent-activity">
            <div class="activity-header">
                <i class="bi bi-clock-history"></i>
                <h3>Recent Activity</h3>
            </div>
            <div class="activity-item">
                <div class="activity-icon" style="background: linear-gradient(135deg, var(--info-color), #42a5f5);">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <div class="activity-content">
                    <div class="activity-title">Appointment completed with John Smith</div>
                    <div class="activity-time">30 minutes ago</div>
                </div>
            </div>
            <div class="activity-item">
                <div class="activity-icon" style="background: linear-gradient(135deg, var(--success-color), #66bb6a);">
                    <i class="bi bi-capsule"></i>
                </div>
                <div class="activity-content">
                    <div class="activity-title">Prescription issued for Maria Garcia</div>
                    <div class="activity-time">1 hour ago</div>
                </div>
            </div>
            <div class="activity-item">
                <div class="activity-icon" style="background: linear-gradient(135deg, var(--warning-color), #ffb74d);">
                    <i class="bi bi-file-earmark-medical"></i>
                </div>
                <div class="activity-content">
                    <div class="activity-title">Medical record updated for David Johnson</div>
                    <div class="activity-time">2 hours ago</div>
                </div>
            </div>
            <div class="activity-item">
                <div class="activity-icon" style="background: linear-gradient(135deg, var(--danger-color), #ef5350);">
                    <i class="bi bi-calendar-plus"></i>
                </div>
                <div class="activity-content">
                    <div class="activity-title">New appointment scheduled with Sarah Wilson</div>
                    <div class="activity-time">3 hours ago</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Logout Button -->
<form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
    <button type="submit" class="logout-btn">
        <i class="bi bi-box-arrow-right"></i> Logout
    </button>
</form>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add animation to stat cards
            const statCards = document.querySelectorAll('.stat-card');
            statCards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(30px)';
                    card.style.transition = 'all 0.6s ease';
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100);
                }, index * 150);
            });

            // Add animation to action cards
            const actionCards = document.querySelectorAll('.action-card');
            actionCards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(30px)';
                    card.style.transition = 'all 0.6s ease';
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100);
                }, (index + 4) * 150);
            });

            // Animate recent activity
            setTimeout(() => {
                const recentActivity = document.querySelector('.recent-activity');
                if (recentActivity) {
                    recentActivity.style.opacity = '0';
                    recentActivity.style.transform = 'translateY(30px)';
                    recentActivity.style.transition = 'all 0.6s ease';
                    setTimeout(() => {
                        recentActivity.style.opacity = '1';
                        recentActivity.style.transform = 'translateY(0)';
                    }, 100);
                }
            }, 8 * 150);
        });
    </script>
}