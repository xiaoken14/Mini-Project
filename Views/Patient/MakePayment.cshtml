@model PaymentViewModel
@{
    ViewData["Title"] = "Make Payment";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<div class="dashboard-content">
    <!-- Header Section -->
    <div class="dashboard-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="dashboard-title">Make Payment</h1>
                <p class="dashboard-subtitle text-muted">Complete your appointment booking with secure payment</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Payments" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Payments
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Payment Invoice -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-file-invoice me-2"></i>Payment Invoice
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Appointment != null)
                    {
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <p><strong>Appointment ID:</strong> #@Model.AppointmentId</p>
                                <p><strong>Service:</strong> @Model.Appointment.Reason</p>
                                <p><strong>Payment Method:</strong> Credit/Debit Card</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Date:</strong> @DateTime.Now.ToString("MMM dd, yyyy")</p>
                                <p><strong>Patient:</strong> @User.Identity?.Name</p>
                                <p><strong>Doctor:</strong> Dr. @Model.Appointment.Doctor.FullName</p>
                            </div>
                        </div>

                        <!-- Invoice Breakdown -->
                        <div class="invoice-breakdown">
                            <div class="table-responsive">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <td class="fw-medium">Consultation Fee:</td>
                                            <td class="text-end">RM@(Model.OriginalAmount.ToString("F2"))</td>
                                        </tr>
                                        @if (Model.DiscountPercentage > 0)
                                        {
                                            <tr class="text-success">
                                                <td class="fw-medium">
                                                    <i class="fas fa-tag me-1"></i>Discount (@Model.DiscountPercentage.ToString("F0")%):
                                                </td>
                                                <td class="text-end">-RM@(Model.DiscountAmount.ToString("F2"))</td>
                                            </tr>
                                        }
                                        <tr class="border-top">
                                            <td class="fw-bold fs-5">Total Amount:</td>
                                            <td class="text-end fw-bold fs-4 text-primary">RM@(Model.FinalAmount.ToString("F2"))</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Savings Highlight -->
                        @if (Model.DiscountPercentage > 0)
                        {
                            <div class="alert alert-success d-flex align-items-center mt-3">
                                <i class="fas fa-piggy-bank me-3 fs-4"></i>
                                <div>
                                    <strong>You Save RM@(Model.DiscountAmount.ToString("F2"))!</strong><br>
                                    <small>@Model.DiscountPercentage% discount automatically applied to your consultation fee.</small>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <!-- Payment Form -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-credit-card me-2 text-primary"></i>Card Payment Details
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="MakePayment" method="post" id="paymentForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="AppointmentId" />
                        <input type="hidden" asp-for="Amount" />
                        <input type="hidden" asp-for="OriginalAmount" />
                        <input type="hidden" asp-for="DiscountPercentage" />

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="CardNumber" class="form-label">Card Number</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                                    <input asp-for="CardNumber" class="form-control" placeholder="1234 5678 9012 3456" maxlength="19" />
                                </div>
                                <span asp-validation-for="CardNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="CardholderName" class="form-label">Cardholder Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="CardholderName" class="form-control" placeholder="John Doe" />
                                </div>
                                <span asp-validation-for="CardholderName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Expiry Date</label>
                                <div class="row">
                                    <div class="col-6">
                                        <select asp-for="ExpiryMonth" class="form-select">
                                            <option value="">Month</option>
                                            @for (int i = 1; i <= 12; i++)
                                            {
                                                <option value="@i">@i.ToString("D2")</option>
                                            }
                                        </select>
                                        <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
                                    </div>
                                    <div class="col-6">
                                        <select asp-for="ExpiryYear" class="form-select">
                                            <option value="">Year</option>
                                            @for (int i = DateTime.Now.Year; i <= DateTime.Now.Year + 10; i++)
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        </select>
                                        <span asp-validation-for="ExpiryYear" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CVV" class="form-label">CVV</label>
                                <div class="input-group">
                                    <input asp-for="CVV" class="form-control" placeholder="123" maxlength="4" />
                                    <span class="input-group-text">
                                        <i class="fas fa-question-circle" data-bs-toggle="tooltip" 
                                           title="3-digit security code on the back of your card"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="CVV" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Security Notice -->
                        <div class="alert alert-info d-flex align-items-center mb-4">
                            <i class="fas fa-shield-alt me-3 fs-4"></i>
                            <div>
                                <strong>Secure Payment</strong><br>
                                Your payment information is encrypted and secure. We do not store your card details.
                            </div>
                        </div>

                        <!-- Payment Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg" id="payButton">
                                <i class="fas fa-lock me-2"></i>Pay RM@(Model.FinalAmount.ToString("F2")) Securely
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>By clicking "Pay Securely", you agree to our terms and conditions
                            </small>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Accepted Cards -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-3">We Accept</h6>
                    <div class="d-flex justify-content-center gap-3">
                        <i class="fab fa-cc-visa fa-2x text-primary"></i>
                        <i class="fab fa-cc-mastercard fa-2x text-warning"></i>
                        <i class="fab fa-cc-amex fa-2x text-info"></i>
                        <i class="fab fa-cc-discover fa-2x text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Format card number input
            $('#CardNumber').on('input', function() {
                let value = $(this).val().replace(/\s/g, '').replace(/[^0-9]/gi, '');
                let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
                if (formattedValue !== $(this).val()) {
                    $(this).val(formattedValue);
                }
            });

            // Only allow numbers for CVV
            $('#CVV').on('input', function() {
                $(this).val($(this).val().replace(/[^0-9]/g, ''));
            });

            // Form submission handling
            $('#paymentForm').on('submit', function(e) {
                $('#payButton').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Processing Payment...');
            });

            // Card type detection (basic)
            $('#CardNumber').on('input', function() {
                let cardNumber = $(this).val().replace(/\s/g, '');
                let cardType = '';
                
                if (cardNumber.match(/^4/)) {
                    cardType = 'visa';
                } else if (cardNumber.match(/^5[1-5]/)) {
                    cardType = 'mastercard';
                } else if (cardNumber.match(/^3[47]/)) {
                    cardType = 'amex';
                } else if (cardNumber.match(/^6/)) {
                    cardType = 'discover';
                }
                
                // You could add visual feedback here for card type
            });
        });
    </script>
}

<style>
    .dashboard-content {
        padding: 20px;
    }

    .dashboard-title {
        font-size: 2rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
    }

    .card {
        border-radius: 12px;
    }

    .btn {
        border-radius: 8px;
    }

    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 12px 16px;
    }

    .form-control:focus, .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .input-group-text {
        border-radius: 8px 0 0 8px;
        background-color: #f8f9fa;
        border-color: #dee2e6;
    }

    .alert {
        border-radius: 8px;
        border: none;
    }

    .fab {
        opacity: 0.7;
        transition: opacity 0.3s ease;
    }

    .fab:hover {
        opacity: 1;
    }

    #payButton {
        font-size: 1.1rem;
        font-weight: 600;
        padding: 15px;
    }

    .card-header.bg-primary {
        border-radius: 12px 12px 0 0 !important;
    }

    .invoice-breakdown {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
        margin: 15px 0;
    }

    .invoice-breakdown .table td {
        padding: 8px 0;
        border: none;
    }

    .invoice-breakdown .border-top {
        border-top: 2px solid #dee2e6 !important;
        padding-top: 15px !important;
    }

    .text-decoration-line-through {
        text-decoration: line-through !important;
    }
</style>