@model List<Appointment>
@{
    ViewData["Title"] = "My Appointments";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<div class="dashboard-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="dashboard-title">My Appointments</h1>
            <p class="dashboard-subtitle text-muted">Manage all your healthcare appointments</p>
        </div>
        <a asp-action="BookAppointment" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Book New Appointment
        </a>
    </div>

    @if (Model.Any())
    {
        <!-- Filter Tabs -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <ul class="nav nav-pills" id="appointmentTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="all-tab" data-bs-toggle="pill" data-bs-target="#all" type="button" role="tab">
                            All Appointments <span class="badge bg-secondary ms-1">@Model.Count</span>
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="upcoming-tab" data-bs-toggle="pill" data-bs-target="#upcoming" type="button" role="tab">
                            Upcoming <span class="badge bg-primary ms-1">@Model.Count(a => a.AppointmentDate >= DateTime.Today)</span>
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="past-tab" data-bs-toggle="pill" data-bs-target="#past" type="button" role="tab">
                            Past <span class="badge bg-success ms-1">@Model.Count(a => a.AppointmentDate < DateTime.Today)</span>
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pending-tab" data-bs-toggle="pill" data-bs-target="#pending" type="button" role="tab">
                            Pending <span class="badge bg-warning ms-1">@Model.Count(a => a.Status == "Booked")</span>
                        </button>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Tab Content -->
        <div class="tab-content" id="appointmentTabContent">
            <!-- All Appointments -->
            <div class="tab-pane fade show active" id="all" role="tabpanel">
                @await Html.PartialAsync("_AppointmentList", Model)
            </div>

            <!-- Upcoming Appointments -->
            <div class="tab-pane fade" id="upcoming" role="tabpanel">
                @await Html.PartialAsync("_AppointmentList", Model.Where(a => a.AppointmentDate >= DateTime.Today).ToList())
            </div>

            <!-- Past Appointments -->
            <div class="tab-pane fade" id="past" role="tabpanel">
                @await Html.PartialAsync("_AppointmentList", Model.Where(a => a.AppointmentDate < DateTime.Today).ToList())
            </div>

            <!-- Pending Appointments -->
            <div class="tab-pane fade" id="pending" role="tabpanel">
                @await Html.PartialAsync("_AppointmentList", Model.Where(a => a.Status == "Booked").ToList())
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-calendar-times fa-4x text-muted mb-4"></i>
                <h4 class="text-muted mb-3">No Appointments Yet</h4>
                <p class="text-muted mb-4">You haven't booked any appointments yet. Start by scheduling your first appointment with one of our healthcare professionals.</p>
                <a asp-action="BookAppointment" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Book Your First Appointment
                </a>
            </div>
        </div>
    }
</div>

<!-- Cancel Appointment Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancel Appointment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to cancel this appointment?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Note:</strong> Appointments can only be cancelled if they are scheduled for tomorrow or later.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Appointment</button>
                <form id="cancelForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Yes, Cancel Appointment</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmCancel(appointmentId) {
        document.getElementById('cancelForm').action = '@Url.Action("CancelAppointment")/' + appointmentId;
        var modal = new bootstrap.Modal(document.getElementById('cancelModal'));
        modal.show();
    }
</script>

<style>
.nav-pills .nav-link {
    border-radius: 20px;
    margin-right: 10px;
}

.nav-pills .nav-link.active {
    background-color: #007bff;
}

.tab-content {
    margin-top: 0;
}
</style>