@model List<Appointment>

@if (Model.Any())
{
    <div class="row">
        @foreach (var appointment in Model)
        {
            <div class="col-lg-6 mb-4">
                <div class="card appointment-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="appointment-date-badge">
                                <div class="date-day">@appointment.AppointmentDate.Day</div>
                                <div class="date-month">@appointment.AppointmentDate.ToString("MMM")</div>
                                <div class="date-year">@appointment.AppointmentDate.Year</div>
                            </div>
                            <span class="badge bg-@(GetStatusColor(appointment.Status)) appointment-status">
                                @appointment.Status
                            </span>
                        </div>

                        <div class="appointment-details">
                            <h5 class="card-title mb-2">
                                <i class="fas fa-user-md me-2 text-primary"></i>
                                Dr. @appointment.Doctor.FirstName @appointment.Doctor.LastName
                            </h5>
                            
                            @if (!string.IsNullOrEmpty(appointment.Doctor.Specialization))
                            {
                                <p class="text-muted mb-2">
                                    <i class="fas fa-stethoscope me-2"></i>@appointment.Doctor.Specialization
                                </p>
                            }

                            <div class="appointment-time mb-3">
                                <i class="fas fa-clock me-2 text-info"></i>
                                <strong>@DateTime.Today.Add(appointment.AppointmentTime).ToString("hh:mm tt")</strong>
                            </div>

                            <div class="appointment-reason mb-3">
                                <h6 class="text-muted mb-1">Reason for Visit:</h6>
                                <p class="mb-0">@appointment.Reason</p>
                            </div>

                            @if (!string.IsNullOrEmpty(appointment.Notes))
                            {
                                <div class="appointment-notes mb-3">
                                    <h6 class="text-muted mb-1">Notes:</h6>
                                    <p class="mb-0 text-muted">@appointment.Notes</p>
                                </div>
                            }
                        </div>

                        <div class="appointment-actions mt-auto">
                            @if (appointment.AppointmentDate > DateTime.Today && appointment.Status != AppointmentStatus.Cancelled)
                            {
                                <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmCancel(@appointment.Id)">
                                    <i class="fas fa-times me-1"></i>Cancel
                                </button>
                            }
                            
                            @if (appointment.Status == AppointmentStatus.Completed)
                            {
                                <button class="btn btn-outline-info btn-sm" disabled>
                                    <i class="fas fa-file-medical me-1"></i>View Report
                                </button>
                            }
                            
                            <small class="text-muted ms-auto">
                                Booked on @appointment.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">No appointments found</h5>
        <p class="text-muted">No appointments match the selected filter.</p>
    </div>
}

@functions {
    private string GetStatusColor(AppointmentStatus status)
    {
        return status switch
        {
            AppointmentStatus.Pending => "warning",
            AppointmentStatus.Confirmed => "success",
            AppointmentStatus.Completed => "primary",
            AppointmentStatus.Cancelled => "danger",
            AppointmentStatus.Rescheduled => "info",
            _ => "secondary"
        };
    }
}

<style>
.appointment-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    border-radius: 12px;
}

.appointment-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
}

.appointment-date-badge {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 15px;
    border-radius: 12px;
    text-align: center;
    min-width: 80px;
}

.date-day {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1;
}

.date-month {
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
}

.date-year {
    font-size: 0.8rem;
    opacity: 0.8;
}

.appointment-status {
    font-size: 0.75rem;
    padding: 6px 12px;
    border-radius: 20px;
}

.appointment-details h5 {
    color: #2c3e50;
    font-weight: 600;
}

.appointment-time {
    background-color: #f8f9fa;
    padding: 8px 12px;
    border-radius: 6px;
    display: inline-block;
}

.appointment-reason {
    background-color: #f8f9fa;
    padding: 12px;
    border-radius: 8px;
    border-left: 4px solid #007bff;
}

.appointment-notes {
    background-color: #fff3cd;
    padding: 12px;
    border-radius: 8px;
    border-left: 4px solid #ffc107;
}

.appointment-actions {
    display: flex;
    align-items: center;
    gap: 10px;
    padding-top: 15px;
    border-top: 1px solid #f8f9fa;
}

.btn-sm {
    border-radius: 6px;
}
</style>