@model Mini_Project.Models.Patient
@{
    ViewData["Title"] = "Patient Dashboard";
}

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #f1c40f;
        --background-color: #ecf0f1;
        --card-bg-color: white;
        --text-color: #34495e;
        --light-text-color: #7f8c8d;
    }

    body {
        background-color: var(--background-color);
        font-family: 'Poppins', sans-serif;
        color: var(--text-color);
    }

    .patient-dashboard .welcome-banner {
        background: linear-gradient(135deg, var(--primary-color), #8e44ad);
        color: white;
        padding: 40px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .patient-dashboard .welcome-banner h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
    }

    .patient-dashboard .welcome-banner p {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-top: 10px;
    }

    .patient-dashboard .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
    }

    .patient-dashboard .dashboard-card {
        background: var(--card-bg-color);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .patient-dashboard .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .patient-dashboard .card-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
        color: var(--primary-color);
        font-size: 1.3rem;
        font-weight: 600;
    }

    .patient-dashboard .card-header i {
        font-size: 1.8rem;
    }

    .patient-dashboard .profile-info ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .patient-dashboard .profile-info li {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #eee;
    }

    .patient-dashboard .profile-info li:last-child {
        border-bottom: none;
    }

    .patient-dashboard .profile-info .label {
        font-weight: 600;
        color: var(--text-color);
    }

    .patient-dashboard .profile-info .value {
        color: var(--light-text-color);
    }

    .patient-dashboard .quick-actions .action-btn {
        display: block;
        width: 100%;
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 10px;
        text-align: center;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .patient-dashboard .action-btn.primary {
        background: var(--primary-color);
        color: white;
    }

    .patient-dashboard .action-btn.primary:hover {
        background: #2980b9;
        transform: translateY(-2px);
    }

    .patient-dashboard .action-btn.secondary {
        background: var(--card-bg-color);
        color: var(--primary-color);
        border: 2px solid var(--primary-color);
    }

    .patient-dashboard .action-btn.secondary:hover {
        background: #fdfefe;
        border-color: #2980b9;
    }

</style>

<div class="patient-dashboard">
    <div class="welcome-banner">
        <h1>Welcome back, @Model.Full_Name!</h1>
        <p>Here's your health dashboard. Manage your appointments and view your records.</p>
    </div>

    <div class="dashboard-grid">
        <!-- Profile Card -->
        <div class="dashboard-card profile-card">
            <div class="card-header">
                <i class="bi bi-person-circle"></i>
                <span>Your Profile</span>
            </div>
            <div class="profile-info">
                <ul>
                    <li>
                        <span class="label">Name</span>
                        <span class="value">@Model.Full_Name</span>
                    </li>
                    <li>
                        <span class="label">Phone</span>
                        <span class="value">@Model.Contact_No</span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="dashboard-card quick-actions">
            <div class="card-header">
                <i class="bi bi-ui-checks-grid"></i>
                <span>Quick Actions</span>
            </div>
            <a href="#" class="action-btn primary">
                <i class="bi bi-calendar-plus"></i>
                Book Appointment
            </a>
            <a href="#" class="action-btn secondary">
                <i class="bi bi-journal-medical"></i>
                View Medical Records
            </a>
             <a href="#" class="action-btn secondary">
                <i class="bi bi-calendar-check"></i>
                My Appointments
            </a>
        </div>
    </div>
</div>
