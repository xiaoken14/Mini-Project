@model IEnumerable<HealthcareApp.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Patients";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> Manage Patients</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Patients (@Model.Count())</h6>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover" id="patientsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Date of Birth</th>
                            <th>Address</th>
                            <th>Status</th>
                            <th>Registered</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3">
                                            <div class="bg-success rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="fas fa-user text-white"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <strong>@patient.FirstName @patient.LastName</strong>
                                            <br><small class="text-muted">Patient</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@patient.Email</td>
                                <td>@patient.PhoneNumber</td>
                                <td>
                                    @if (patient.DateOfBirth.HasValue)
                                    {
                                        @patient.DateOfBirth.Value.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(patient.Address))
                                    {
                                        <small>@patient.Address</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(patient.LockoutEnd == null ? "success" : "danger")">
                                        @(patient.LockoutEnd == null ? "Active" : "Disabled")
                                    </span>
                                </td>
                                <td>
                                    <small>@patient.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="PatientDetails" asp-route-id="@patient.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form asp-action="ToggleUserStatus" asp-route-userId="@patient.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-@(patient.LockoutEnd == null ? "warning" : "success")" title="@(patient.LockoutEnd == null ? "Disable" : "Enable")">
                                                <i class="fas fa-@(patient.LockoutEnd == null ? "ban" : "check")"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No patients found</h5>
                <p class="text-muted">Patients will appear here once they register.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#patientsTable').DataTable({
                "pageLength": 10,
                "order": [[ 6, "desc" ]],
                "columnDefs": [
                    { "orderable": false, "targets": 7 }
                ]
            });
        });
    </script>
}