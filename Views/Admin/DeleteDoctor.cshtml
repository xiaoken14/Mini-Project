@model HealthcareApp.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete Doctor";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-times"></i> Delete Doctor</h2>
    <a asp-action="Doctors" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Doctors
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Warning!</strong> This action cannot be undone. Deleting this doctor will also remove all associated appointments and data.
                </div>

                <h6>Are you sure you want to delete this doctor?</h6>
                
                <div class="row mt-4">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>
                            
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>
                            
                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">@Model.PhoneNumber</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Specialization:</dt>
                            <dd class="col-sm-7">@(Model.Specialization ?? "Not specified")</dd>
                            
                            <dt class="col-sm-5">License:</dt>
                            <dd class="col-sm-7">@(Model.LicenseNumber ?? "Not specified")</dd>
                            
                            <dt class="col-sm-5">Created:</dt>
                            <dd class="col-sm-7">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                        </dl>
                    </div>
                </div>

                <form asp-action="DeleteDoctor" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Doctors" class="btn btn-secondary me-md-2">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Doctor
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>