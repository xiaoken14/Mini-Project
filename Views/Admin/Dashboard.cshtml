@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Welcome to Admin Dashboard</h2>
            <p class="lead">Manage the healthcare system.</p>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Management</h5>
                    <p class="card-text">Manage doctors, patients, and staff.</p>
                    <a href="#" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">System Reports</h5>
                    <p class="card-text">View system analytics and reports.</p>
                    <a href="#" class="btn btn-primary">View Reports</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">System Settings</h5>
                    <p class="card-text">Configure system preferences.</p>
                    <a href="#" class="btn btn-primary">Settings</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Actions</h5>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-primary">Add Doctor</button>
                        <button type="button" class="btn btn-outline-primary">System Backup</button>
                        <button type="button" class="btn btn-outline-primary">View Logs</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>