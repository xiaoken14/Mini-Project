@model HealthcareApp.Models.ApplicationUser
@{
    ViewData["Title"] = "User Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user"></i> User Details</h2>
    <a asp-action="Users" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Users
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> User Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>
                            
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>
                            
                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not provided")</dd>
                            
                            <dt class="col-sm-4">Role:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-@(Model.Role == UserRole.Admin ? "danger" : Model.Role == UserRole.Doctor ? "primary" : "success")">
                                    @Model.Role
                                </span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Email Verified:</dt>
                            <dd class="col-sm-7">
                                @if (Model.EmailConfirmed)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check"></i> Verified
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-clock"></i> Pending
                                    </span>
                                }
                            </dd>
                            
                            <dt class="col-sm-5">Status:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-@(Model.LockoutEnd == null ? "success" : "danger")">
                                    @(Model.LockoutEnd == null ? "Active" : "Disabled")
                                </span>
                            </dd>
                            
                            <dt class="col-sm-5">Registered:</dt>
                            <dd class="col-sm-7">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                            
                            <dt class="col-sm-5">Last Login:</dt>
                            <dd class="col-sm-7">
                                @if (Model.LastLoginTime.HasValue)
                                {
                                    @Model.LastLoginTime.Value.ToString("MMMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
                
                @if (Model.Role == UserRole.Doctor)
                {
                    <hr>
                    <h6><i class="fas fa-user-md"></i> Doctor Information</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Specialization:</dt>
                                <dd class="col-sm-8">@(Model.Specialization ?? "Not specified")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">License Number:</dt>
                                <dd class="col-sm-7">@(Model.LicenseNumber ?? "Not specified")</dd>
                            </dl>
                        </div>
                    </div>
                }
                
                @if (Model.Role == UserRole.Patient)
                {
                    <hr>
                    <h6><i class="fas fa-user"></i> Patient Information</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Date of Birth:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.DateOfBirth.HasValue)
                                    {
                                        @Model.DateOfBirth.Value.ToString("MMMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4">Address:</dt>
                                <dd class="col-sm-8">@(Model.Address ?? "Not provided")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Emergency Contact:</dt>
                                <dd class="col-sm-7">@(Model.EmergencyContact ?? "Not provided")</dd>
                            </dl>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-cogs"></i> Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (Model.Role != UserRole.Admin)
                    {
                        <form asp-action="ToggleUserStatus" asp-route-userId="@Model.Id" method="post">
                            <button type="submit" class="btn btn-@(Model.LockoutEnd == null ? "warning" : "success") w-100">
                                <i class="fas fa-@(Model.LockoutEnd == null ? "ban" : "check")"></i>
                                @(Model.LockoutEnd == null ? "Disable Account" : "Enable Account")
                            </button>
                        </form>
                    }
                    
                    <a href="mailto:@Model.Email" class="btn btn-outline-primary">
                        <i class="fas fa-envelope"></i> Send Email
                    </a>
                    
                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <a href="tel:@Model.PhoneNumber" class="btn btn-outline-success">
                            <i class="fas fa-phone"></i> Call User
                        </a>
                    }
                </div>
            </div>
        </div>
        
        <div class="card shadow mt-3">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-line"></i> Activity</h5>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="mb-2">
                        <i class="fas fa-clock fa-2x text-info"></i>
                        <h6 class="mt-2">Account Age</h6>
                        <span class="badge bg-info">@((DateTime.UtcNow - Model.CreatedAt).Days) days</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>