@model IEnumerable<HealthcareApp.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Doctors";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-md"></i> Manage Doctors</h2>
    <div class="btn-group" role="group">
        <a asp-action="CreateDoctor" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Doctor
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Doctors (@Model.Count())</h6>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover" id="doctorsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Specialty</th>
                            <th>License</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doctor in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3">
                                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="fas fa-user-md text-white"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <strong>@doctor.FirstName @doctor.LastName</strong>
                                            <br><small class="text-muted">Doctor</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@doctor.Email</td>
                                <td>@doctor.PhoneNumber</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(doctor.Specialization))
                                    {
                                        <span class="badge bg-info">@doctor.Specialization</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(doctor.LicenseNumber))
                                    {
                                        <small>@doctor.LicenseNumber</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(doctor.LockoutEnd == null ? "success" : "danger")">
                                        @(doctor.LockoutEnd == null ? "Active" : "Disabled")
                                    </span>
                                </td>
                                <td>
                                    <small>@doctor.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditDoctor" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="DeleteDoctor" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-user-md fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No doctors found</h5>
                <p class="text-muted">Start by adding your first doctor to the system.</p>
                <a asp-action="CreateDoctor" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add First Doctor
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#doctorsTable').DataTable({
                "pageLength": 10,
                "order": [[ 6, "desc" ]],
                "columnDefs": [
                    { "orderable": false, "targets": 7 }
                ]
            });
        });
    </script>
}