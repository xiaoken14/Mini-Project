@model HealthcareApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Patient Login | HealthCarePro";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --patient-primary: #2196f3;
        --patient-secondary: #42a5f5;
        --patient-light: #e3f2fd;
        --patient-dark: #1976d2;
        --gradient-start: #0d47a1;
        --gradient-mid: #1565c0;
        --gradient-end: #1976d2;
        --success-color: #4caf50;
        --info-color: #2196f3;
    }

    * {
        font-family: 'Poppins', sans-serif;
    }

    body {
        background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-mid) 50%, var(--gradient-end) 100%);
        min-height: 100vh;
        margin: 0;
        padding: 20px 0;
        position: relative;
        overflow-x: hidden;
    }

    .container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 20px;
    }

    body::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(circle at 20% 80%, rgba(33, 150, 243, 0.1) 0%, transparent 50%),
                    radial-gradient(circle at 80% 20%, rgba(33, 150, 243, 0.08) 0%, transparent 50%),
                    url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" opacity="0.05"><circle fill="white" cx="50" cy="50" r="20"/><path fill="white" d="M30,50 Q50,30 70,50 Q50,70 30,50"/></svg>');
        background-size: 100px;
        z-index: -1;
    }

    .patient-login-container {
        width: 100%;
        max-width: 450px;
        z-index: 1;
        animation: slideUp 0.8s ease;
        margin: auto;
    }

    @@keyframes slideUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .patient-login-card {
        background: rgba(255, 255, 255, 0.96);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .patient-login-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
    }

    .patient-login-header {
        padding: 40px 30px 25px;
        text-align: center;
        background: linear-gradient(135deg, var(--patient-primary), var(--patient-dark));
        color: white;
        position: relative;
        overflow: hidden;
    }

    .patient-login-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                    radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
    }

    .patient-heart {
        font-size: 4rem;
        margin-bottom: 15px;
        display: inline-block;
        background: rgba(255, 255, 255, 0.15);
        width: 100px;
        height: 100px;
        line-height: 100px;
        border-radius: 50%;
        border: 2px solid rgba(255, 255, 255, 0.25);
        animation: heartbeat 2s ease-in-out infinite;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

    .patient-heart:hover {
        transform: scale(1.05);
    }

    @@keyframes heartbeat {
        0%, 100% { transform: scale(1); }
        25% { transform: scale(1.05); }
        50% { transform: scale(1); }
        75% { transform: scale(1.02); }
    }

    .patient-title {
        font-size: 1.9rem;
        font-weight: 600;
        margin-bottom: 8px;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        letter-spacing: 0.5px;
    }

    .patient-subtitle {
        font-size: 0.95rem;
        opacity: 0.95;
        font-weight: 300;
        max-width: 280px;
        margin: 0 auto;
        line-height: 1.5;
    }

    .patient-login-body {
        padding: 40px 30px;
    }

    .patient-form-group {
        margin-bottom: 1.6rem;
        position: relative;
    }

    .patient-form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #2c3e50;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 8px;
        letter-spacing: 0.3px;
    }

    .patient-form-label i {
        color: var(--patient-primary);
        font-size: 1.1rem;
    }

    .patient-form-control {
        width: 100%;
        padding: 16px 20px;
        border: 2px solid #e1e8ed;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: white;
        box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
        height: 56px;
        line-height: 1.5;
    }

    .patient-form-control:focus {
        border-color: var(--patient-primary);
        box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.12), inset 0 1px 3px rgba(0, 0, 0, 0.05);
        outline: none;
        transform: translateY(-1px);
    }

    .patient-password-container {
        position: relative;
    }

    .patient-password-toggle {
        position: absolute;
        right: 18px;
        top: 50%;
        transform: translateY(-50%);
        background: transparent;
        border: none;
        color: #95a5a6;
        font-size: 1.2rem;
        cursor: pointer;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 30px;
        height: 30px;
        transition: all 0.3s ease;
        border-radius: 50%;
    }

    .patient-password-toggle:hover {
        color: var(--patient-primary);
        background: rgba(33, 150, 243, 0.1);
    }

    .patient-remember-forgot {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.8rem;
    }

    .patient-remember-me {
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }

    .patient-remember-me input[type="checkbox"] {
        width: 18px;
        height: 18px;
        border-radius: 4px;
        cursor: pointer;
        accent-color: var(--patient-primary);
        transition: transform 0.2s ease;
    }

    .patient-remember-me input[type="checkbox"]:hover {
        transform: scale(1.1);
    }

    .patient-remember-me label {
        cursor: pointer;
        font-size: 0.9rem;
        color: #2c3e50;
        font-weight: 500;
    }

    .patient-forgot-link {
        color: var(--patient-primary);
        text-decoration: none;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .patient-forgot-link:hover {
        color: var(--patient-dark);
        text-decoration: underline;
        transform: translateY(-1px);
    }

    .patient-login-btn {
        width: 100%;
        padding: 16px;
        background: linear-gradient(135deg, var(--patient-primary), var(--patient-secondary));
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-bottom: 1.8rem;
        letter-spacing: 0.5px;
        position: relative;
        overflow: hidden;
        box-shadow: 0 6px 20px rgba(33, 150, 243, 0.25);
    }

    .patient-login-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: 0.5s;
    }

    .patient-login-btn:hover {
        background: linear-gradient(135deg, var(--patient-dark), var(--patient-primary));
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(33, 150, 243, 0.35);
        letter-spacing: 0.7px;
    }

    .patient-login-btn:hover::before {
        left: 100%;
    }

    .patient-login-btn:active {
        transform: translateY(0);
        box-shadow: 0 4px 15px rgba(33, 150, 243, 0.3);
    }

    .patient-login-footer {
        text-align: center;
        padding-top: 20px;
        border-top: 1px solid rgba(0, 0, 0, 0.08);
    }

    .patient-register-link {
        color: var(--patient-primary);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        border-radius: 8px;
        background: rgba(33, 150, 243, 0.08);
        border: 1px solid rgba(33, 150, 243, 0.15);
        margin-bottom: 15px;
    }

    .patient-register-link:hover {
        background: var(--patient-primary);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(33, 150, 243, 0.2);
    }

    .patient-back-link {
        color: var(--patient-primary);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 0.9rem;
    }

    .patient-back-link:hover {
        color: var(--patient-dark);
        text-decoration: underline;
    }

    .patient-welcome-note {
        background: rgba(227, 242, 253, 0.8);
        border: 1px solid rgba(33, 150, 243, 0.2);
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 25px;
        text-align: center;
        position: relative;
    }

    .patient-welcome-note::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 4px;
        background: var(--patient-primary);
        border-radius: 2px 0 0 2px;
    }

    .patient-welcome-note p {
        margin: 0;
        font-size: 0.9rem;
        color: var(--patient-dark);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        line-height: 1.5;
    }

    .patient-welcome-note i {
        color: var(--patient-primary);
        font-size: 1.1rem;
    }

    .patient-validation-summary {
        background: rgba(227, 242, 253, 0.9);
        border: 1px solid rgba(33, 150, 243, 0.3);
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 25px;
        animation: slideDown 0.3s ease;
    }

    .patient-validation-summary ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .patient-validation-summary li {
        color: var(--patient-dark);
        font-size: 0.9rem;
        margin: 5px 0;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .patient-validation-summary li:before {
        content: "ℹ";
        font-size: 1rem;
        color: var(--patient-primary);
    }

    .patient-field-validation {
        display: block;
        margin-top: 5px;
        font-size: 0.85rem;
        color: var(--patient-dark);
        display: flex;
        align-items: center;
        gap: 5px;
        font-weight: 500;
    }

    .patient-field-validation:before {
        content: "•";
        font-weight: bold;
        color: var(--patient-primary);
    }

    @@keyframes slideDown {
        from { transform: translateY(-20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .container {
            padding: 10px;
            min-height: auto;
        }

        .patient-login-container {
            max-width: 100%;
            margin: 20px auto;
        }

        .patient-login-header, .patient-login-body {
            padding: 25px 20px;
        }

        .patient-heart {
            width: 85px;
            height: 85px;
            line-height: 85px;
            font-size: 3.2rem;
        }

        .patient-title {
            font-size: 1.5rem;
        }

        .patient-remember-forgot {
            flex-direction: column;
            gap: 12px;
            align-items: flex-start;
        }

        .patient-register-link {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="container">
    <div class="patient-login-container">
        <div class="patient-login-card">
            <div class="patient-login-header">
                <div class="patient-heart">
                    <i class="bi bi-heart-fill"></i>
                </div>
                <div style="margin-bottom: 15px;">
                    <span style="font-size: 1.2rem; font-weight: 500; opacity: 0.9;">HealthCare<span style="color: #e3f2fd;">Pro</span></span>
                </div>
                <h2 class="patient-title">Patient Portal</h2>
                <p class="patient-subtitle">Your health journey starts here</p>
            </div>

            <div class="patient-login-body">
                <div class="patient-welcome-note">
                    <p><i class="bi bi-heart-pulse"></i>Welcome to your personal healthcare portal</p>
                </div>

                <form asp-action="LoginPatient" method="post">
                    <div asp-validation-summary="All" class="patient-validation-summary"></div>

                    <div class="patient-form-group">
                        <label asp-for="Email" class="patient-form-label">
                            <i class="bi bi-envelope"></i> Email Address
                        </label>
                        <div class="position-relative">
                            <input asp-for="Email" class="patient-form-control" placeholder="Enter your email address" />
                        </div>
                        <span asp-validation-for="Email" class="patient-field-validation"></span>
                    </div>

                    <div class="patient-form-group">
                        <label asp-for="Password" class="patient-form-label">
                            <i class="bi bi-lock"></i> Password
                        </label>
                        <div class="position-relative patient-password-container">
                            <input asp-for="Password" type="password" class="patient-form-control" id="patientPassword" placeholder="Enter your password" />
                            <button type="button" class="patient-password-toggle" id="patientTogglePassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="patient-field-validation"></span>
                    </div>

                    <div class="patient-remember-forgot">
                        <div class="patient-remember-me">
                            <input asp-for="RememberMe" type="checkbox" id="patientRememberMe" />
                            <label for="patientRememberMe">Remember me</label>
                        </div>
                        <a href="#" class="patient-forgot-link">
                            <i class="bi bi-question-circle"></i> Forgot password?
                        </a>
                    </div>

                    <button type="submit" class="patient-login-btn">
                        <i class="bi bi-box-arrow-in-right"></i> Sign In to Portal
                    </button>
                </form>

                <div class="patient-login-footer">
                    <a asp-action="Register" class="patient-register-link">
                        <i class="bi bi-person-plus"></i> Create New Account
                    </a>
                    <br>
                    <a asp-controller="Home" asp-action="Index" class="patient-back-link">
                        <i class="bi bi-arrow-left"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Password visibility toggle
            const patientToggleButton = document.getElementById('patientTogglePassword');
            const patientPasswordInput = document.getElementById('patientPassword');
            
            if (patientToggleButton && patientPasswordInput) {
                patientToggleButton.addEventListener('click', function() {
                    const type = patientPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    patientPasswordInput.setAttribute('type', type);
                    
                    // Toggle eye icon
                    const icon = this.querySelector('i');
                    if (type === 'text') {
                        icon.classList.remove('bi-eye');
                        icon.classList.add('bi-eye-slash');
                        this.style.background = 'rgba(33, 150, 243, 0.15)';
                    } else {
                        icon.classList.remove('bi-eye-slash');
                        icon.classList.add('bi-eye');
                        this.style.background = '';
                    }
                });
            }

            // Form interaction effects
            const patientInputs = document.querySelectorAll('.patient-form-control');
            
            patientInputs.forEach(input => {
                // Clear error on focus
                input.addEventListener('focus', function() {
                    this.style.borderColor = '';
                    const errorSpan = this.parentElement.nextElementSibling;
                    if (errorSpan && errorSpan.classList.contains('patient-field-validation')) {
                        errorSpan.style.opacity = '0.6';
                    }
                });

                // Restore error on blur if invalid
                input.addEventListener('blur', function() {
                    if (!this.value.trim() && this.hasAttribute('required')) {
                        this.style.borderColor = 'var(--patient-dark)';
                        const errorSpan = this.parentElement.nextElementSibling;
                        if (errorSpan && errorSpan.classList.contains('patient-field-validation')) {
                            errorSpan.style.opacity = '1';
                        }
                    }
                });

                // Add typing effect
                input.addEventListener('input', function() {
                    if (this.value.trim()) {
                        this.style.borderColor = 'var(--patient-primary)';
                    }
                });

                // Check if field has error on page load
                if (input.classList.contains('input-validation-error')) {
                    input.style.borderColor = 'var(--patient-dark)';
                }
            });

            // Button hover effects
            const patientLoginBtn = document.querySelector('.patient-login-btn');
            if (patientLoginBtn) {
                patientLoginBtn.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                
                patientLoginBtn.addEventListener('mouseleave', function() {
                    if (!this.matches(':active')) {
                        this.style.transform = 'translateY(0)';
                    }
                });
            }

            // Register link animation
            const patientRegisterLink = document.querySelector('.patient-register-link');
            if (patientRegisterLink) {
                patientRegisterLink.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                
                patientRegisterLink.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            }

            // Add gentle card animation on load
            const patientCard = document.querySelector('.patient-login-card');
            if (patientCard) {
                setTimeout(() => {
                    patientCard.style.transform = 'translateY(-3px)';
                    setTimeout(() => {
                        patientCard.style.transform = 'translateY(0)';
                    }, 150);
                }, 400);
            }
        });
    </script>
}