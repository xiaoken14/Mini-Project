@{
    ViewData["Title"] = "Registration Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center">Registration Successful</h4>
                </div>
                <div class="card-body text-center">
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle fa-3x mb-3"></i>
                        <h5>Account Created Successfully!</h5>
                        <p>Your account has been created. You will be redirected to verify your email address.</p>
                    </div>
                    
                    <div class="mt-3">
                        <p>If you are not redirected automatically, click below:</p>
                        <a href="@Url.Action("VerifyOTP", "Account")" class="btn btn-primary">Verify Email</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Auto-redirect after 3 seconds
    setTimeout(function() {
        window.location.href = '@Url.Action("VerifyOTP", "Account")';
    }, 3000);
</script>