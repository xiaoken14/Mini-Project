@{
    ViewData["Title"] = "Email Confirmation Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center">Confirmation Error</h4>
                </div>
                <div class="card-body text-center">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                        <h5>Error</h5>
                        <p>There was an error confirming your email. The confirmation link may be invalid or expired.</p>
                    </div>
                    
                    <div class="mt-3">
                        <p>Please try requesting a new confirmation email.</p>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-primary">Back to Registration</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>