@model Mini_Project.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Register | Silver & Scholar Health Scheduler";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-blue: #2a6ebb;
        --light-blue: #e3f2fd;
        --patient-color: #4a6fa5;
        --success-color: #388e3c;
        --gradient-start: #1a2980;
        --gradient-end: #26d0ce;
        --input-focus: #4a90e2;
    }

    * {
        font-family: 'Poppins', sans-serif;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
        min-height: 100vh;
        margin: 0;
        padding: 20px;
    }

    .register-wrapper {
        width: 100%;
        max-width: 550px;
        margin: 40px auto;
        animation: fadeIn 0.5s ease;
    }

    .register-card {
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .register-card:hover {
        transform: translateY(-5px);
    }

    .register-header {
        padding: 35px 40px 25px;
        text-align: center;
        background: linear-gradient(135deg, var(--primary-blue), var(--gradient-end));
        color: white;
        position: relative;
        overflow: hidden;
    }

    .register-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(to right, #4a6fa5, #6b93d6, #4a6fa5);
    }

    .register-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

    .register-header p {
        opacity: 0.9;
        font-size: 0.95rem;
        max-width: 400px;
        margin: 0 auto;
        line-height: 1.5;
    }

    .register-steps {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    .step {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
    }

    .step.active {
        background: white;
        transform: scale(1.3);
    }

    .register-form {
        padding: 30px 40px 40px;
        min-height: auto;
        display: block;
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-group {
        flex: 1;
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #333;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .required::after {
        content: '*';
        color: #ff4757;
        margin-left: 4px;
    }

    .form-control {
        width: 100%;
        padding: 14px 45px 14px 16px;
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

    .form-control:focus {
        border-color: var(--patient-color);
        box-shadow: 0 0 0 4px rgba(74, 111, 165, 0.1);
        outline: none;
        background: white;
        transform: translateY(-1px);
    }

    .form-control.error {
        border-color: #ff4757;
        background: #fff5f5;
    }

    .form-control.success {
        border-color: var(--success-color);
        background: #f8fff8;
    }

    .input-icon {
        position: absolute;
        right: 16px;
        top: 42px;
        color: #999;
        font-size: 1.1rem;
        transition: color 0.3s ease;
    }

    .form-control:focus + .input-icon {
        color: var(--patient-color);
    }

    .password-strength {
        height: 4px;
        background: #e0e0e0;
        border-radius: 2px;
        margin-top: 8px;
        overflow: hidden;
        position: relative;
    }

    .strength-bar {
        height: 100%;
        width: 0;
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    .strength-weak { background: #ff4757; width: 33%; }
    .strength-medium { background: #ffa502; width: 66%; }
    .strength-strong { background: var(--success-color); width: 100%; }

    .password-toggle {
        position: absolute;
        right: 16px;
        top: 50%;
        transform: translateY(-50%);
        background: transparent;
        border: none;
        color: #999;
        font-size: 1.1rem;
        cursor: pointer;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        padding: 6px;
        transition: color 0.3s ease;
        z-index: 9999;
        pointer-events: auto;
    }

    .password-toggle:hover {
        color: var(--patient-color);
    }

    .error-message {
        color: #ff4757;
        font-size: 0.85rem;
        margin-top: 5px;
        display: flex;
        align-items: center;
        gap: 5px;
        animation: slideDown 0.3s ease;
    }

    .terms-section {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
        margin: 25px 0;
        border: 2px solid #e0e0e0;
    }

    .terms-checkbox {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        cursor: pointer;
    }

    .terms-checkbox input[type="checkbox"] {
        width: 20px;
        height: 20px;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 3px;
        flex-shrink: 0;
    }

    .terms-text {
        font-size: 0.9rem;
        color: #555;
        line-height: 1.5;
    }

    .terms-text a {
        color: var(--patient-color);
        text-decoration: none;
        font-weight: 500;
    }

    .terms-text a:hover {
        text-decoration: underline;
    }

    .submit-btn {
        width: 100%;
        padding: 18px;
        border: none;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: white;
        background: linear-gradient(to right, var(--patient-color), #6b93d6);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        position: relative;
        overflow: hidden;
    }

    .submit-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s ease;
    }

    .submit-btn:hover {
        background: linear-gradient(to right, #3a5f95, #5b83c6);
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(74, 111, 165, 0.3);
    }

    .submit-btn:hover::before {
        left: 100%;
    }

    .submit-btn:active {
        transform: translateY(0);
    }

    .submit-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
    }

    .login-link-section {
        text-align: center;
        padding-top: 25px;
        margin-top: 25px;
        border-top: 1px solid #eee;
        display: block;
    }

    .login-link {
        color: var(--patient-color);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        border-radius: 8px;
        border: 2px solid transparent;
        margin-top: 10px;
    }

    .login-link:hover {
        color: #3a5f95;
        border-color: #e0e0e0;
        background: #f8f9fa;
        transform: translateY(-2px);
    }

    .alert-container {
        margin: 0 40px 25px;
    }

    .alert-message {
        padding: 14px 20px;
        border-radius: 12px;
        font-size: 0.95rem;
        text-align: center;
        animation: slideDown 0.5s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .alert-error {
        background: linear-gradient(to right, #ffebee, #ffcdd2);
        color: #c62828;
        border: 1px solid #ff8a80;
    }

    .alert-success {
        background: linear-gradient(to right, #e8f5e9, #c8e6c9);
        color: var(--success-color);
        border: 1px solid #81c784;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @@keyframes slideDown {
        from { transform: translateY(-10px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }

    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }

    @@media (max-width: 768px) {
        body {
            padding: 15px;
            min-height: 100vh;
            height: auto;
        }
        
        .register-wrapper {
            max-width: 100%;
            margin: 20px auto;
        }
        
        .register-header,
        .register-form {
            padding: 25px;
        }
        
        .form-row {
            flex-direction: column;
            gap: 0;
        }
        
        .alert-container {
            margin: 0 25px 20px;
        }
    }

    @@media (max-width: 480px) {
        .register-header h1 {
            font-size: 1.7rem;
        }
        
        .register-header,
        .register-form {
            padding: 20px;
        }
        
        .alert-container {
            margin: 0 20px 20px;
        }
        
        .login-link {
            padding: 8px 16px;
            font-size: 0.95rem;
        }
    }
</style>

<div class="register-wrapper">
    <!-- Toast container -->
    <div id="toastContainer" style="position:fixed;top:20px;right:20px;z-index:1100;display:flex;flex-direction:column;gap:10px;"> </div>
    <!-- Debug panel: visible during troubleshooting only -->
    <div id="debugPanel" style="position:fixed;bottom:20px;left:20px;z-index:1200;background:rgba(0,0,0,0.6);color:#fff;padding:8px 12px;border-radius:8px;font-size:0.9rem;display:flex;gap:8px;align-items:center;">
        <span>Toggle clicks: <b id="toggleClickCount">0</b></span>
        <button type="button" id="debugTestBtn" style="background:#fff;color:#000;border-radius:6px;padding:6px 8px;border:none;cursor:pointer">Test Toggle</button>
    </div>
    <div class="register-card">
        <div class="register-header">
            <h1><i class="bi bi-person-plus"></i> Create Account</h1>
            <p>Join Silver & Scholar Health to book appointments and manage your health journey</p>
            <div class="register-steps">
                <div class="step active"></div>
                <div class="step"></div>
                <div class="step"></div>
            </div>
        </div>

        <div class="alert-container">
            @if (TempData["Error"] != null)
            {
                <div class="alert-message alert-error">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                </div>
            }
            
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert-message alert-success">
                    <i class="bi bi-check-circle"></i> @ViewBag.SuccessMessage
                </div>
            }
        </div>

        <div class="register-form">
            <form asp-action="Register" method="post" id="registerForm" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="error-message" style="display:block;margin-bottom:12px;"></div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label required">
                            <i class="bi bi-person"></i> Full Name
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                        <i class="bi bi-person input-icon"></i>
                        <span asp-validation-for="Name" class="error-message"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Email" class="form-label required">
                            <i class="bi bi-envelope"></i> Email Address
                        </label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email address" />
                        <i class="bi bi-envelope input-icon"></i>
                        <span asp-validation-for="Email" class="error-message"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="form-label required">
                            <i class="bi bi-phone"></i> Phone Number
                        </label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                        <i class="bi bi-phone input-icon"></i>
                        <span asp-validation-for="PhoneNumber" class="error-message"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Password" class="form-label required">
                            <i class="bi bi-lock"></i> Password
                        </label>
                        <input asp-for="Password" type="password" class="form-control" id="passwordInput" 
                               placeholder="Create a strong password" />
                        <button type="button" class="password-toggle" id="togglePassword1" data-target="#passwordInput" onclick="togglePasswordImmediate('#passwordInput', this)">
                            <i class="bi bi-eye"></i>
                        </button>
                        <div class="password-strength">
                            <div class="strength-bar" id="passwordStrength"></div>
                        </div>
                        <span asp-validation-for="Password" class="error-message"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-label required">
                            <i class="bi bi-lock-fill"></i> Confirm Password
                        </label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPasswordInput" 
                               placeholder="Confirm your password" />
                        <button type="button" class="password-toggle" id="togglePassword2" data-target="#confirmPasswordInput" onclick="togglePasswordImmediate('#confirmPasswordInput', this)">
                            <i class="bi bi-eye"></i>
                        </button>
                        <span asp-validation-for="ConfirmPassword" class="error-message"></span>
                        <div class="error-message" id="passwordMatchError" style="display: none;">
                            <i class="bi bi-exclamation-circle"></i> Passwords do not match
                        </div>
                    </div>
                </div>

                <div class="terms-section">
                    <label class="terms-checkbox">
                        <input type="checkbox" id="agreeTerms" required />
                        <span class="terms-text">
                            I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.
                            I understand that I will receive a verification email to confirm my account.
                        </span>
                    </label>
                </div>

                <button type="submit" class="submit-btn" id="submitBtn">
                    <i class="bi bi-person-plus"></i> Create Account
                </button>
            </form>

            <div class="login-link-section">
                <p>Already have an account?</p>
                <a href="@Url.Action("Login","Account")" class="login-link">
                    <i class="bi bi-box-arrow-in-right"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Immediate toggle function used by inline onclick as a robust fallback
        function togglePasswordImmediate(selector, btn) {
            try {
                var input = document.querySelector(selector);
                if (!input) return;
                var isPwd = input.getAttribute('type') === 'password';
                input.setAttribute('type', isPwd ? 'text' : 'password');
                var icon = btn && btn.querySelector ? btn.querySelector('i') : null;
                if (icon) icon.className = isPwd ? 'bi bi-eye-slash' : 'bi bi-eye';
                if (btn) {
                    btn.setAttribute('aria-pressed', isPwd ? 'true' : 'false');
                    btn.title = isPwd ? 'Hide password' : 'Show password';
                }
                try { input.focus(); } catch (e) { }
            } catch (e) { console && console.error && console.error(e); }
        }
        document.addEventListener('DOMContentLoaded', function() {
            // Password visibility toggles (attach to all .password-toggle buttons)
            const passwordInput = document.getElementById('passwordInput');
            const confirmPasswordInput = document.getElementById('confirmPasswordInput');

            console.log('Password toggle init');
            // attach handlers using event capture and ensure styling
                document.querySelectorAll('.password-toggle').forEach(btn => {
                const target = btn.getAttribute('data-target');
                const input = target ? document.querySelector(target) : btn.previousElementSibling;
                btn.style.zIndex = 9999;
                btn.style.pointerEvents = 'auto';
                btn.setAttribute('aria-pressed', 'false');
                btn.title = 'Show password';
                // use capturing listener to be robust against other handlers
                btn.addEventListener('click', function(e) {
                    console.log('password-toggle clicked', target, !!input);
                    // increment visible debug counter
                    try {
                        window.passwordToggleClickCount = (window.passwordToggleClickCount || 0) + 1;
                        const counterEl = document.getElementById('toggleClickCount');
                        if (counterEl) counterEl.innerText = window.passwordToggleClickCount;
                    } catch (err) { console && console.warn && console.warn('debug counter error', err); }
                    if (!input) return;
                    const isPwd = input.getAttribute('type') === 'password';
                    input.setAttribute('type', isPwd ? 'text' : 'password');
                    const icon = this.querySelector('i');
                    if (icon) {
                        icon.className = isPwd ? 'bi bi-eye-slash' : 'bi bi-eye';
                    }
                    this.setAttribute('aria-pressed', isPwd ? 'true' : 'false');
                    this.title = isPwd ? 'Hide password' : 'Show password';
                    try { input.focus(); } catch { }
                }, true);
            });

            // Debug test button: immediately toggle both fields when clicked
            try {
                const debugTestBtn = document.getElementById('debugTestBtn');
                if (debugTestBtn) {
                    debugTestBtn.addEventListener('click', function() {
                        togglePasswordImmediate('#passwordInput', document.getElementById('togglePassword1'));
                        togglePasswordImmediate('#confirmPasswordInput', document.getElementById('togglePassword2'));
                        // also increment counter to reflect the test
                        window.passwordToggleClickCount = (window.passwordToggleClickCount || 0) + 1;
                        const c = document.getElementById('toggleClickCount'); if (c) c.innerText = window.passwordToggleClickCount;
                        console.log('debugTestBtn clicked');
                    });
                }
            } catch (e) { console && console.warn && console.warn('debug test attach failed', e); }

            // global click listener for debug (remove later if desired)
            document.addEventListener('click', function(e) {
                const el = e.target;
                if (el && el.classList && el.classList.contains && el.classList.contains('password-toggle')) {
                    console.log('captured password-toggle on document click');
                }
            }, true);

            if (passwordInput) {

                // Password strength indicator
                passwordInput.addEventListener('input', function() {
                    const password = this.value;
                    const strengthBar = document.getElementById('passwordStrength');

                    if (!strengthBar) return;

                    // Reset
                    strengthBar.className = 'strength-bar';
                    strengthBar.style.width = '0';

                    if (password.length === 0) return;

                    let strength = 0;

                    if (password.length >= 8) strength++;
                    if (/[A-Z]/.test(password)) strength++;
                    if (/[0-9]/.test(password)) strength++;
                    if (/[^A-Za-z0-9]/.test(password)) strength++;

                    if (strength >= 4) {
                        strengthBar.classList.add('strength-strong');
                    } else if (strength >= 2) {
                        strengthBar.classList.add('strength-medium');
                    } else {
                        strengthBar.classList.add('strength-weak');
                    }

                    this.classList.remove('error', 'success');
                    if (strength < 2) {
                        this.classList.add('error');
                    } else {
                        this.classList.add('success');
                    }
                });
            }

            if (confirmPasswordInput) {
                togglePasswordVisibility(togglePassword2, confirmPasswordInput);

                // Password match validation
                confirmPasswordInput.addEventListener('input', function() {
                    const passwordMatchError = document.getElementById('passwordMatchError');
                    const password = passwordInput ? passwordInput.value : '';
                    const confirm = this.value;

                    if (!passwordMatchError) return;

                    if (confirm.length === 0) {
                        passwordMatchError.style.display = 'none';
                        this.classList.remove('error', 'success');
                        return;
                    }

                    if (password !== confirm) {
                        passwordMatchError.style.display = 'flex';
                        this.classList.add('error');
                        this.classList.remove('success');
                    } else {
                        passwordMatchError.style.display = 'none';
                        this.classList.add('success');
                        this.classList.remove('error');
                    }
                });
            }

            // Form submission validation
            const form = document.getElementById('registerForm');
            const submitBtn = document.getElementById('submitBtn');
            const agreeTerms = document.getElementById('agreeTerms');

            if (form) {
                form.addEventListener('submit', function(e) {
                    let isValid = true;
                    const inputs = form.querySelectorAll('input[required]');

                    inputs.forEach(input => input.classList.remove('error'));

                    inputs.forEach(input => {
                        if (!input.value.trim()) {
                            input.classList.add('error');
                            isValid = false;
                        }
                    });

                    const password = passwordInput ? passwordInput.value : '';
                    const confirm = confirmPasswordInput ? confirmPasswordInput.value : '';
                    const passwordMatchError = document.getElementById('passwordMatchError');

                    if (password && confirm && password !== confirm) {
                        if (passwordInput) passwordInput.classList.add('error');
                        if (confirmPasswordInput) confirmPasswordInput.classList.add('error');
                        if (passwordMatchError) passwordMatchError.style.display = 'flex';
                        isValid = false;
                    }

                    if (agreeTerms && !agreeTerms.checked) {
                        if (agreeTerms.parentElement) agreeTerms.parentElement.style.borderColor = '#ff4757';
                        isValid = false;
                    } else if (agreeTerms && agreeTerms.parentElement) {
                        agreeTerms.parentElement.style.borderColor = '';
                    }

                    if (!isValid) {
                        e.preventDefault();
                        if (submitBtn) {
                            submitBtn.style.animation = 'pulse 0.5s ease';
                            setTimeout(() => submitBtn.style.animation = '', 500);
                        }
                    }
                });

                // Real-time validation
                form.querySelectorAll('input').forEach(input => {
                    input.addEventListener('blur', function() {
                        if (this.hasAttribute('required') && !this.value.trim()) this.classList.add('error');
                    });

                    input.addEventListener('input', function() {
                        if (this.value.trim()) this.classList.remove('error');
                    });
                });
            }

            // Server-side messages toast
            function createToast(message, type = 'info', timeout = 5000) {
                const container = document.getElementById('toastContainer');
                if (!container) return;
                const toast = document.createElement('div');
                toast.className = 'alert-message ' + (type === 'success' ? 'alert-success' : (type === 'error' ? 'alert-error' : ''));
                toast.style.minWidth = '260px';
                toast.style.boxShadow = '0 6px 18px rgba(0,0,0,0.12)';
                toast.style.padding = '12px 16px';
                toast.style.borderRadius = '8px';
                toast.style.display = 'flex';
                toast.style.alignItems = 'center';
                toast.style.gap = '8px';
                toast.innerText = message;
                container.appendChild(toast);
                setTimeout(() => { toast.style.opacity = '0'; toast.style.transition = 'opacity 0.4s'; setTimeout(()=> toast.remove(), 450); }, timeout);
            }

            // Render any server messages
            @* TempData Error *@
            @if (TempData["Error"] != null)
            {
                <text>createToast(@System.Text.Json.JsonSerializer.Serialize(TempData["Error"]?.ToString()), 'error', 6000);</text>
            }

            @* ModelState errors will already be shown in the validation summary; optionally show a toast prompt *@
            @if (!ViewData.ModelState.IsValid)
            {
                <text>createToast("Please fix the highlighted errors and try again.", 'error', 6000);</text>
            }

            @if (ViewBag.SuccessMessage != null)
            {
                <text>createToast(@System.Text.Json.JsonSerializer.Serialize(ViewBag.SuccessMessage?.ToString()), 'success', 6000);</text>
            }
        });
    </script>
}