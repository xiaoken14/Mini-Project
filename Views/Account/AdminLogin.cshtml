@model Mini_Project.ViewModels.LoginVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Admin Login | Silver & Scholar Health Scheduler";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-blue: #2a6ebb;
        --light-blue: #e3f2fd;
        --admin-color: #d32f2f; /* Red for admin */
        --success-color: #388e3c;
        --gradient-start: #1a2980;
        --gradient-end: #26d0ce;
    }

    * {
        font-family: 'Poppins', sans-serif;
    }

    body {
        background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
        min-height: 100vh;
        margin: 0;
        padding: 20px;
    }

    .login-wrapper {
        min-height: calc(100vh - 40px);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        width: 100%;
        max-width: 450px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .login-card:hover {
        transform: translateY(-5px);
    }

    .login-header {
        padding: 30px 30px 20px;
        text-align: center;
        background: linear-gradient(135deg, #c62828, #f44336);
        color: white;
    }

    .login-header h1 {
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .login-header p {
        opacity: 0.9;
        font-size: 0.9rem;
    }

    .form-container {
        padding: 30px;
    }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #333;
        font-size: 0.9rem;
    }

    .form-control {
        width: 100%;
        padding: 14px 16px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: white;
    }

    .form-control:focus {
        border-color: var(--admin-color);
        box-shadow: 0 0 0 3px rgba(211, 47, 47, 0.15);
        outline: none;
    }

    .input-icon {
        position: absolute;
        right: 16px;
        top: 42px;
        color: #999;
        font-size: 1.1rem;
    }

    .submit-btn {
        width: 100%;
        padding: 16px;
        border: none;
        border-radius: 10px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: white;
        background: linear-gradient(to right, var(--admin-color), #f44336);
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .alert-message {
        padding: 12px 20px;
        border-radius: 10px;
        margin: 0 30px 20px;
        font-size: 0.9rem;
        text-align: center;
    }

    .alert-error {
        background: #ffebee;
        color: #c62828;
        border: 1px solid #ffcdd2;
    }
</style>

<div class="login-wrapper">
    <div class="login-card">
        <div class="login-header">
            <h1><i class="bi bi-shield-check"></i> Admin Login</h1>
            <p>Silver & Scholar Health Scheduler</p>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert-message alert-error">
                <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
            </div>
        }

        <div class="form-container">
            <form asp-action="AdminLogin" asp-controller="Account" method="post">
                <div class="form-group">
                    <label class="form-label" asp-for="Email">Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <i class="bi bi-person-badge input-icon"></i>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <i class="bi bi-key input-icon"></i>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                
                <button type="submit" class="submit-btn">
                    <i class="bi bi-shield-check"></i> Login
                </button>
            </form>
        </div>
         <div class="register-section" style="text-align: center; padding-bottom: 20px;">
            <p>Are you a patient? 
                <a asp-action="Login" asp-controller="Account" class="register-link" style="color: var(--primary-blue);">
                    <i class="bi bi-person-plus"></i> Login Here
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
