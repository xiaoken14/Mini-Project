@{
    ViewData["Title"] = "Registration Successful";
}

<div class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="width: 500px;">
        <div class="card-body p-5 text-center">
            <h3 class="fw-bold text-primary mb-3">Check Your Email</h3>
            <p class="text-muted mb-4">
                We have sent a confirmation link to your email address.
                Please click the link to verify your account.
            </p>
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary w-100 fw-bold">
                Return to Login
            </a>
        </div>
    </div>
</div>